<% include ./partials/header.ejs %>
<%
var phone = "";
var nickname = "";
var approve_rules = "";
var caller = "";
if (data) {
    phone = data.phone;
    nickname = data.nickname;
    approve_rules = data.approve_rules;
    caller = caller.caller;
}

if (approve_rules === "on") {
    approve_rules = "checked";
}
%>

    <div class="container">
        <div class="row have-padding">
            <div class="content transparent">
                <div class="login-wrapper col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12 col-xs-offset-0">
                    <div>
                        <div class="text-center">
                            <img src="/images/avatar.png" class="register-avatar">
                        </div>
                        <form method="post" action="/register">

                            <input id="userCaller" name="caller" type="hidden" value="">

                            <div class="text-center">
                                <h3 class="register-title">ثبت نام</h3>
                            </div>

                            <div class="form-group text-center">
                                <label for="phone">شماره همراه</label>
                                <input type="text" class="form-control text-center dirltr" id="phone"
                                       name="phone" value="<%= phone %>"
                                       placeholder="مثال: 09191234567" required="required">
                            </div>


                            <div class="form-group text-center">
                                <label for="nickname">نام مستعار</label>
                                <input type="text" class="form-control text-center" id="nickname"
                                       name="nickname" value="<%= nickname %>"
                                       placeholder="مثال: ali123" required="required">
                            </div>


                            <div class="form-group text-center">
                                <input type="checkbox" name="approve_rules" id="approve_rules"
                                       required="required" <%= approve_rules %> >
                                <label for="approve_rules"><a href="/rules">قوانین و مقررات</a> را قبول دارم.</label>
                            </div>

                            <button type="submit" class="btn btn-primary center-block" id="btn-register">بفرست</button>
                        </form>
                        <ul class="login-menu">
                            <li class="login-menu__item">
                                <a href="/" class="login-menu__link">خانه</a>
                            </li>
                            <li class="login-menu__item">
                                <a href="/login" class="login-menu__link">ورود</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


<script>
    var caller = new URL(window.location.href).searchParams.get("nickname");
    if (caller) {
        localStorage.setItem('caller', caller);
    }
    caller = localStorage.getItem('caller');
    document.getElementById("userCaller").value = caller;
</script>

<% include ./partials/libs.ejs %>
<% include ./partials/footer.ejs %>
